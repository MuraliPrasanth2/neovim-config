return {
    'phaazon/hop.nvim',
    config = function()
        require('hop').setup({ keys = 'etovxqpdygfblzhckisuran' })
        vim.keymap.set("n", "<leader>hc", "<cmd>lua require('hop').hint_char2()<cr>")
        vim.keymap.set("n", "<leader>hl", "<cmd>lua require('hop').hint_lines()<cr>")
        vim.keymap.set("v", "<leader>hc", "<cmd>lua require('hop').hint_char2()<cr>")
        vim.keymap.set("v", "<leader>hl", "<cmd>lua require('hop').hint_lines()<cr>")
    end
}
